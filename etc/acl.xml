<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::gallery_elements" title="Gallery">
                    <resource id="Lof_Gallery::banner" title="Gallery" sortOrder="10">
                        <resource id="Lof_Gallery::banner_edit" title="Edit Gallery" sortOrder="10" />
                        <resource id="Lof_Gallery::banner_save" title="Save Gallery" sortOrder="20" />
                        <resource id="Lof_Gallery::banner_delete" title="Delete Gallery" sortOrder="30" />
                    </resource>
                    <resource id="Lof_Gallery::category" title="Category" sortOrder="20">
                        <resource id="Lof_Gallery::category_edit" title="Edit Category" sortOrder="10" />
                        <resource id="Lof_Gallery::category_save" title="Save Category" sortOrder="20" />
                        <resource id="Lof_Gallery::category_delete" title="Delete Category" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_Gallery::config_gallery" title="Gallery" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>